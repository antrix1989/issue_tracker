= form_for @ticket do |f|
  -if @ticket.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ticket.errors.count, "error")} prohibited this ticket from being saved:"
      %ul
        - @ticket.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :customer_name, "Name:" 
    %br
    = f.text_field :customer_name
    
  .field
    = f.label :customer_email, "E-mail:"
    %br
    = f.text_field :customer_email
    
  .field
    = f.label :subject, "Subject:"
    %br
    = f.text_field :subject
    
  .field
    = f.label :body, "Description:"
    %br
    = f.text_area :body, :rows => 6
  
  .actions
    = f.submit

